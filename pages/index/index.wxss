/**index.wxss**/

page {
  height: 100%;
}

.container {
  background: #efefef;
  min-height: 100%;
  padding: 0px 0px 60px 0px;
}

.list {
  margin-top: 10px;
  padding: 0 10rpx;
  overflow: scroll;
  flex-grow:1;
}

.list-item {
  position: relative;
  background: #fff;
  margin-bottom: 10rpx;
  padding: 30rpx 40rpx;
}

.list-item .content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #333;
}
.list-item .date{
  font-size: 12px;
  color: #999;
}

.tabar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  width: 100%;
  height: 60px;
  background: #fff;
}

.tabbar-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  display: block;
  width: 32px;
  height: 32px;
}
